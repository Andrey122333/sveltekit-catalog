{
  "name": "sveltekit-catalog",
  "version": "1.0.0",
  "description": "Интернет-каталог 'Код и Кофе' на SvelteKit для НИР3",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cross-env PORT=3011 node build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "dependencies": {
    "@sveltejs/adapter-node": "^5.0.1"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "cross-env": "^7.0.3",
    "svelte": "^5.0.0",
    "svelte-check": "^3.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
